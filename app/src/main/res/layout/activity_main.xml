<?xml version="1.0" encoding="utf-8"?>

<!-- 메인 배경 이미지 -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"

        android:background="@drawable/main_image2"
        android:gravity="center"
        android:orientation="vertical">

    <!-- 로고 이미지 -->
    <ImageView

        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/title"
        />
<ImageView
android:layout_width="240dp"
android:layout_height="240dp"
android:layout_gravity="center"
android:src="@drawable/logo"
    />

    <!-- 임의 버튼, 이미지 삽입 원할경우 imageview로 변경 필요, 색 변경 필요시 backgroundTint 변경  -->
    <Button
        android:id="@+id/enterStart"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:paddingVertical="10dp"
        android:backgroundTint="@color/Button_Color"
        android:text="게임 시작"
        android:textSize="20sp"
        android:fontFamily="@font/neodgm_code"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/enterExplain"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingVertical="10dp"
        android:backgroundTint="@color/Button_Color"
        android:text="게임 설명"
        android:fontFamily="@font/neodgm_code"

        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/enterInfo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingVertical="10dp"
        android:backgroundTint="@color/Button_Color"
        android:text="개발자 소개"
        android:textSize="20sp"
        android:fontFamily="@font/neodgm_code"

        android:textStyle="bold"/>

</LinearLayout>



